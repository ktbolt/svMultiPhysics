    <Domain id="3">
      <Electrophysiology_model> TTP </Electrophysiology_model>

      <G_Na> 29.68 </G_Na> 
      <G_CaL> 7.96e-5 </G_CaL>
      <G_Kr> 0.31 </G_Kr>

      <Myocardial_zone> epi </Myocardial_zone>

      <Isotropic_conductivity> 0.033192 </Isotropic_conductivity>

